<Window x:Class="SPC_Package_Generator.SqlColumnMapping"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SqlColumnMapping" Height="750" Width="1000">
    <StackPanel
        Orientation="Vertical">
        <Label
            FontSize="24">
            SQL Integration
        </Label>

        <Grid x:Name="gridSqlTable"
              Margin="20,20,20,40">
            <StackPanel x:Name="spanel_FileName" Orientation="Vertical" Grid.Column="0">
                <Label FontSize="20">
                    File Name
                </Label>
            </StackPanel>

            <StackPanel x:Name="spanel_SqlTable" Orientation="Vertical" Grid.Column="1">
                <Label FontSize="20">
                    Suggested SQL Table Name
                </Label>
            </StackPanel>

            <Grid.ColumnDefinitions>
                <ColumnDefinition 
                    Width="1*"/>
                <ColumnDefinition
                    Width="1*"/>
            </Grid.ColumnDefinitions>
        </Grid>

        <Border BorderThickness="2" BorderBrush="LightBlue" Margin="0,0,0,20">
        <ScrollViewer Height="350" >
        <DataGrid x:Name="mainGridView" />
        </ScrollViewer>
        </Border>
        
        <Button Content="Generate Scripts" Margin="400,0,400,0" Padding="0,5,0,5"/>

    </StackPanel>
</Window>
